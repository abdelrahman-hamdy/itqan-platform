{
  "debug": true,
  "port": 6001,
  "metrics": {
    "enabled": true,
    "port": 9601
  },
  "database": {
    "redis": {
      "host": "127.0.0.1",
      "port": 6379,
      "db": 1
    }
  },
  "rateLimiter": {
    "driver": "memory"
  },
  "httpApi": {
    "acceptTraffic": {
      "memorySnapshot": true
    }
  },
  "cors": {
    "credentials": true,
    "origin": ["http://localhost:8000", "http://127.0.0.1:8000"],
    "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With", "X-CSRF-TOKEN"]
  }
}
